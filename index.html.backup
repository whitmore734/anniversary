            "–¢–≤–æ—è –¥–æ–±—Ä–æ—Ç–∞ –∏ –Ω–µ–∂–Ω–æ—Å—Ç—å –±–µ—Å—Ü–µ–Ω–Ω—ã ü¶ã",
            "–° —Ç–æ–±–æ–π —è –¥–æ–º–∞, –≥–¥–µ –±—ã –º—ã –Ω–∏ –±—ã–ª–∏ üè°",
            "–¢—ã –º–æ—è –ª—é–±–∏–º–∞—è –º—ã—Å–ª—å –ø–µ—Ä–µ–¥ —Å–Ω–æ–º üåô",
            "–ë–ª–∞–≥–æ–¥–∞—Ä—é —Å—É–¥—å–±—É –∑–∞ –∫–∞–∂–¥—ã–π –¥–µ–Ω—å —Å —Ç–æ–±–æ–π üôè",
            "–¢—ã - –ª—É—á—à–µ–µ, —á—Ç–æ —Å–ª—É—á–∏–ª–æ—Å—å –≤ –º–æ–µ–π –∂–∏–∑–Ω–∏ ‚ù§Ô∏è"
        ];

        let lastComplimentIndex = -1;

        function generateCompliment() {
            const display = document.getElementById('compliment-display');
            const text = document.getElementById('compliment-text');
            
            // –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–π –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç, –æ—Ç–ª–∏—á–Ω—ã–π –æ—Ç –ø—Ä–µ–¥—ã–¥—É—â–µ–≥–æ
            let randomIndex;
            do {
                randomIndex = Math.floor(Math.random() * compliments.length);
            } while (randomIndex === lastComplimentIndex && compliments.length > 1);
            
            lastComplimentIndex = randomIndex;
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π
            display.style.display = 'flex';
            text.style.animation = 'none';
            
            // Trigger reflow –¥–ª—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞ –∞–Ω–∏–º–∞—Ü–∏–∏
            void text.offsetWidth;
            
            text.textContent = compliments[randomIndex];
            text.style.animation = 'fadeInScale 0.8s ease-out';
        }

        // –ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–æ–µ —Å–µ—Ä–¥—Ü–µ
        let heartCount = parseInt(localStorage.getItem('heartCount')) || 0;
        let chocolatesEarned = parseInt(localStorage.getItem('chocolatesEarned')) || 0;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        document.addEventListener('DOMContentLoaded', function() {
            updateHeartDisplay();
        });

        function updateHeartDisplay() {
            document.getElementById('heart-count').textContent = heartCount;
            
            const percentage = Math.min((heartCount / 1000) * 100, 100);
            document.getElementById('progress-bar').style.width = percentage + '%';
            document.getElementById('progress-text').textContent = Math.floor(percentage) + '%';
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –¥–æ—Å—Ç–∏–≥–Ω—É—Ç –ª–∏ –ª–∏–º–∏—Ç
            if (heartCount >= 1000) {
                document.getElementById('chocolate-reward').classList.add('visible');
                document.getElementById('exchange-btn').style.display = 'inline-block';
            }
        }

        function clickHeart() {
            if (heartCount >= 1000) {
                return; // –ù–µ –ø–æ–∑–≤–æ–ª—è–µ–º –Ω–∞–∫–ª–∏–∫–∏–≤–∞—Ç—å –±–æ–ª—å—à–µ 1000
            }
            
            heartCount++;
            localStorage.setItem('heartCount', heartCount);
            updateHeartDisplay();
            
            // –ê–Ω–∏–º–∞—Ü–∏—è –∫–ª–∏–∫–∞ –Ω–∞ —Å–µ—Ä–¥—Ü–µ
            const heart = document.getElementById('interactive-heart');
            heart.classList.add('clicked');
            setTimeout(() => {
                heart.classList.remove('clicked');
            }, 300);
            
            // –°–æ–∑–¥–∞–µ–º –ª–µ—Ç—è—â–µ–µ —Å–µ—Ä–¥–µ—á–∫–æ
            createFloatingHeart(event);
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–µ 1000
            if (heartCount === 1000) {
                setTimeout(() => {
                    alert('üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è—é! –¢—ã —Å–æ–±—Ä–∞–ª–∞ 1000 —Å–µ—Ä–¥–µ—á–µ–∫! –¢–µ–ø–µ—Ä—å —Ç—ã –º–æ–∂–µ—à—å –æ–±–º–µ–Ω—è—Ç—å –∏—Ö –Ω–∞ –ª—é–±–∏–º—É—é —à–æ–∫–æ–ª–∞–¥–∫—É! üç´');
                }, 500);
            }
        }

        function createFloatingHeart(event) {
            const floatingHeart = document.createElement('div');
            floatingHeart.className = 'floating-heart';
            floatingHeart.textContent = '‚ù§Ô∏è';
            
            // –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä—É–µ–º –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ –∫–ª–∏–∫–∞
            const rect = document.getElementById('interactive-heart').getBoundingClientRect();
            floatingHeart.style.left = (rect.left + rect.width / 2 - 20) + 'px';
            floatingHeart.style.top = (rect.top + rect.height / 2) + 'px';
            
            document.body.appendChild(floatingHeart);
            
            // –£–¥–∞–ª—è–µ–º –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
            setTimeout(() => {
                floatingHeart.remove();
            }, 2000);
        }

        function exchangeHearts() {
            if (heartCount >= 1000) {
                chocolatesEarned++;
                localStorage.setItem('chocolatesEarned', chocolatesEarned);
                
                // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å—á–µ—Ç—á–∏–∫
                heartCount = 0;
                localStorage.setItem('heartCount', heartCount);
                
                // –°–∫—Ä—ã–≤–∞–µ–º –Ω–∞–≥—Ä–∞–¥—É –∏ –∫–Ω–æ–ø–∫—É
                document.getElementById('chocolate-reward').classList.remove('visible');
                document.getElementById('exchange-btn').style.display = 'none';
                
                updateHeartDisplay();
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ–∑–¥—Ä–∞–≤–ª–µ–Ω–∏–µ
                alert(`üéâ –û—Ç–ª–∏—á–Ω–æ! –¢—ã –æ–±–º–µ–Ω—è–ª–∞ —Å–µ—Ä–¥–µ—á–∫–∏ –Ω–∞ —à–æ–∫–æ–ª–∞–¥–∫—É! üç´\n\n–í—Å–µ–≥–æ —à–æ–∫–æ–ª–∞–¥–æ–∫ –∑–∞—Ä–∞–±–æ—Ç–∞–Ω–æ: ${chocolatesEarned}\n\n–ù–∞—á–∏–Ω–∞–π —Å–æ–±–∏—Ä–∞—Ç—å —Å–Ω–æ–≤–∞! üíñ`);
            }
        }

        // –ì–∞–ª–µ—Ä–µ—è –∏ –ª–∞–π—Ç–±–æ–∫—Å
        let currentImageIndex = 0;
        const totalImages = 12;

        function openLightbox(index) {
            currentImageIndex = index;
            document.getElementById('lightbox').classList.add('active');
            updateLightboxImage();
        }

        function closeLightbox(event) {
            if (event.target.classList.contains('lightbox') || 
                event.target.classList.contains('lightbox-close')) {
                document.getElementById('lightbox').classList.remove('active');
            }
        }

        function changeImage(direction, event) {
            event.stopPropagation();
            currentImageIndex += direction;
            
            if (currentImageIndex < 0) {
                currentImageIndex = totalImages - 1;
            } else if (currentImageIndex >= totalImages) {
                currentImageIndex = 0;
            }
            
            updateLightboxImage();
        }

        function updateLightboxImage() {
            document.getElementById('lightbox-img').src = `–§–æ—Ç–æ/${currentImageIndex + 1}.jpg`;
        }

        // –ü–æ–¥–¥–µ—Ä–∂–∫–∞ –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã
        document.addEventListener('keydown', function(e) {
            const lightbox = document.getElementById('lightbox');
            const modal = document.getElementById('modal');
            
            if (modal.classList.contains('active')) {
                if (e.key === 'Escape') {
                    modal.classList.remove('active');
                }
            } else if (lightbox.classList.contains('active')) {
                if (e.key === 'Escape') {
                    lightbox.classList.remove('active');
                } else if (e.key === 'ArrowLeft') {
                    changeImage(-1, e);
                } else if (e.key === 'ArrowRight') {
                    changeImage(1, e);
                }
            }
        });

        // –ü–æ–¥–¥–µ—Ä–∂–∫–∞ —Å–≤–∞–π–ø–æ–≤ –Ω–∞ –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞—Ö
        let touchStartX = 0;
        let touchEndX = 0;

        document.getElementById('lightbox').addEventListener('touchstart', function(e) {
            touchStartX = e.changedTouches[0].screenX;
        });

        document.getElementById('lightbox').addEventListener('touchend', function(e) {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        });

        function handleSwipe() {
            if (touchEndX < touchStartX - 50) {
                changeImage(1, new Event('swipe'));
            }
            if (touchEndX > touchStartX + 50) {
                changeImage(-1, new Event('swipe'));
            }
        }
    </script>
